<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/items"
    android:layout_width="342dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    app:cardBackgroundColor="@color/bckgdMain"
    app:cardCornerRadius="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/ivImg"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/image_rounded"
            android:backgroundTint="@color/bckgdMain"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/ivImg"
            android:text="Namesdfgsdfgsdfgdfsgsdfgsdfgsdfsfff"
            android:maxEms="10"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/textMain"
            android:textSize="20sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/ivImg"
            android:layout_below="@+id/tvName"
            android:maxEms="7"
            android:fontFamily="sans-serif-condensed"
            android:text="Artist"
            android:textColor="@color/textMain"
            android:textSize="15sp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_time"
            android:layout_alignBottom="@+id/tvName"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="-24dp"
            android:layout_toEndOf="@+id/tvArtist"/>

        <TextView
            android:id="@+id/tvDur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="-22.5dp"
            android:layout_toEndOf="@+id/tvArtist"
            android:fontFamily="sans-serif-condensed"
            android:maxEms="2"
            android:singleLine="true"
            android:text="0:0000000000000000"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_toEndOf="@+id/tvArtist"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="-24dp"
            app:srcCompat="@drawable/ic_library" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_marginStart="86dp"
            android:layout_marginBottom="-22.5dp"
            android:layout_toEndOf="@+id/tvArtist"
            android:fontFamily="sans-serif-condensed"
            android:text="1"
            android:textColor="@color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_more" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>